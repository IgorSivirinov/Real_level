<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.uiMain.tasks.Settings.listSettings.NewTaskActivity">
    <EditText
        android:id="@+id/newTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>
    <EditText
        android:id="@+id/newTaskOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Overview"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/newTaskSportXP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SportXP"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/newTaskMindXP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MindXP"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/newTaskCreativityXP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CreativityXP"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/saveButton"
        android:text="Save"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
</LinearLayout>